<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_own_list">

    <fragment
        android:id="@+id/navigation_own_list"
        android:name="com.example.navbar.ui.home.OwnListFragment"
        android:label="My Mood Events"
        tools:layout="@layout/fragment_own_moods" />

    <fragment
        android:id="@+id/navigation_friends_moods"
        android:name="com.example.navbar.ui.friendsmood.FriendsMoodsFragment"
        android:label="Friends' Mood Events"
        tools:layout="@layout/fragment_friends_moods" />

    <fragment
        android:id="@+id/navigation_add_post"
        android:name="com.example.navbar.ui.addpost.AddPostFragment"
        android:label="Add a Mood Event"
        tools:layout="@layout/fragment_add_post" />

    <fragment
        android:id="@+id/navigation_friends"
        android:name="com.example.navbar.ui.friends.FriendsFragment"
        android:label="Friends"
        tools:layout="@layout/fragment_friends" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.navbar.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>