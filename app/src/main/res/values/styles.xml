<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WhiteText">
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/abeezee</item>
    </style>

    <style name="InputButtonText" parent="WhiteText">
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textSize">@dimen/input_button_font_size</item>
    </style>

    <style name="user_profile">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">7</item>
        <item name="android:shadowRadius">15</item>
    </style>
</resources>
